<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE entry [
	<!ENTITY ipath "icons/">
	<!ENTITY etool "&ipath;etool16">
	<!ENTITY dtool "&ipath;dtool16">
	<!ENTITY tango "&ipath;tango/16x16">
]>
<entry entryPoint="nomad"
	xmlns="http://nmedit.sf.net/MenuLayout"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <entry entryPoint="menu" >
	<entry entryPoint="file" >
		<entry entryPoint="new">
			<entry entryPoint="global" flat="true">
				<entry entryPoint="location">
					<icon type="enabledIcon" src="&etool;/newfolder_wiz.gif" />
				</entry>
				<entry entryPoint="synth">
					<icon type="enabledIcon" src="&etool;/new_wiz.gif" />
					<icon type="disabledIcon" src="&dtool;/new_wiz.gif" />
				</entry>
			</entry>
		</entry>
		<entry entryPoint="open">
		  <icon type="enabledIcon" src="&tango;/actions/document-open.png" />
		  <accelerator desc="control O" descmac="meta O"/>
		</entry>
		<entry entryPoint="close" flat="true">
			<entry entryPoint="close">
		  		<accelerator desc="control W" descmac="meta W"/>
		    </entry>
			<entry entryPoint="closeall">
		  		<accelerator desc="shift control W" descmac="shift meta W"/>
		    </entry>
		</entry>
		<entry entryPoint="save" flat="true">
			<entry entryPoint="save">
				<icon type="enabledIcon" src="&etool;/save_edit.gif" />
				<icon type="disabledIcon" src="&dtool;/save_edit.gif" />
		  		<accelerator desc="control S" descmac="meta S"/>
			</entry>
			<entry entryPoint="saveas">
				<icon type="enabledIcon" src="&etool;/saveas_edit.gif" />
				<icon type="disabledIcon" src="&dtool;/saveas_edit.gif" />
		  		<accelerator desc="shift control S" descmac="shift meta S"/>
			</entry>
			<entry entryPoint="saveall">
				<icon type="enabledIcon" src="&etool;/saveall_edit.gif" />
				<icon type="disabledIcon" src="&dtool;/saveall_edit.gif" />
			</entry>
			<entry entryPoint="saveinsynth" />
		</entry>
		<entry entryPoint="ie" flat="true">
			<entry entryPoint="import">
				<icon type="enabledIcon" src="&etool;/import_wiz.gif" />
				<icon type="disabledIcon" src="&dtool;/import_wiz.gif" />
				<accelerator desc="control I" descmac="meta I"/>
			</entry>
			<entry entryPoint="export">
				<icon type="enabledIcon" src="&etool;/export_wiz.gif" />
				<icon type="disabledIcon" src="&dtool;/export_wiz.gif" />
				<accelerator desc="control E" descmac="meta E"/>
			</entry>
		</entry>
		<entry entryPoint="properties" />
		<entry entryPoint="exit" />
	</entry>
	<entry entryPoint="edit">
		<entry entryPoint="history" flat="true">
			<entry entryPoint="undo">
				<icon type="enabledIcon" src="&etool;/undo_edit.gif"/>
				<icon type="disabledIcon" src="&dtool;/undo_edit.gif"/>
				<accelerator desc="control Z" descmac="meta Z"/>
			</entry>
			<entry entryPoint="redo">
				<icon type="enabledIcon" src="&etool;/redo_edit.gif" />
				<icon type="disabledIcon" src="&dtool;/redo_edit.gif" />
				<accelerator desc="control Y" descmac="meta Y"/>
			</entry>
		</entry>
		<entry entryPoint="edit" flat="true">
			<entry entryPoint="cut">
				<icon type="enabledIcon" src="&etool;/cut_edit.gif" />
				<icon type="disabledIcon" src="&dtool;/cut_edit.gif" />
				<accelerator desc="control X" descmac="meta X"/>
			</entry>
			<entry entryPoint="copy">
				<icon type="enabledIcon" src="&etool;/copy_edit.gif" />
				<icon type="disabledIcon" src="&dtool;/copy_edit.gif" />
				<accelerator desc="control C" descmac="meta C"/>
			</entry>
			<entry entryPoint="paste">
				<icon type="enabledIcon" src="&etool;/paste_edit.gif" />
				<icon type="disabledIcon" src="&dtool;/paste_edit.gif" />
				<accelerator desc="control V" descmac="meta V"/>
			</entry>
		</entry>
		<entry entryPoint="app" flat="true">
			<entry entryPoint="preferences" />
		</entry>
	</entry>
	<entry entryPoint="synth">
		<entry entryPoint="new" />
		<entry entryPoint="setup" />
	</entry>
	<entry entryPoint="patch">
		<entry entryPoint="notes" />
		<entry entryPoint="settings" />
		<entry entryPoint="randomize" />
	</entry>
	<!--
	<entry entryPoint="window">
		<entry entryPoint="language">
			<entry entryPoint="de_DE" />
			<entry entryPoint="en" />
			<entry entryPoint="fr_FR" />
		</entry>
	</entry> -->
	<entry entryPoint="help">
		<entry entryPoint="plugins">
			<icon type="enabledIcon" src="&etool;/plugin.gif" />
		</entry>
		<entry entryPoint="license">
			<icon type="enabledIcon" src="&etool;/help_contents.gif" />
			<icon type="disabledIcon" src="&dtool;/help_contents.gif" />
		</entry>
		<entry entryPoint="about">
			<icon type="enabledIcon" src="&etool;/help_contents.gif" />
			<icon type="disabledIcon" src="&dtool;/help_contents.gif" />
		</entry>
	</entry>
  </entry> <!-- end of menu -->

  <entry entryPoint="explorer">
    <entry entryPoint="synth">
      <entry entryPoint="control" flat="true">
        <entry entryPoint="connect" />
        <entry entryPoint="disconnect" />
      </entry>
      <entry entryPoint="settings" />
      <entry entryPoint="general" flat="true">
        <entry entryPoint="remove" />
      </entry>
    </entry>
  </entry>
</entry>
