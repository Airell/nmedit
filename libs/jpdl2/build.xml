<project name="jpdl2" default="dist" basedir=".">

  <property name="src" location="src"/>
  <property name="format" location="format"/>
  <property name="packageroot" location="${src}/net/sf/nmedit/jpdl2"/>
  <property name="test" location="test"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>
  <property name="api_root" location="docs/api"/>
  <property name="byaccj" location="/usr/local/bin/byaccj"/>
  <property name="jflex" location="/usr/local/lib/jflex-1.4.1/lib/JFlex.jar"/>

  <target name="init">
    <mkdir dir="${build}"/>
  </target>

  <target name="generate"
          description="generate lexer and parser">
	<echo level="info">[Generating Lexer]</echo>
    <java jar="${jflex}" fork="true" dir="${packageroot}/format">
      <arg line="-d ${packageroot}/format ${format}/pdl2.jflex"/>
    </java>
  	<!-- delete backup file PDL2Lexer.java~ generated by jflex -->
  	<delete quiet="true" file="${packageroot}/format/PDL2Lexer.java~" /> 
  	
	<echo level="info">[Done]</echo>
	<echo level="info">[Generating Parser]</echo>
    <exec executable="${byaccj}" dir="${packageroot}/format">
      <arg line="-Jclass=PDL2Parser -Jpackage=net.sf.nmedit.jpdl2.format -Jnodebug -Jthrows=PDLException -Jnorun -J ${format}/pdl2.byaccj"/>
    </exec>
	<echo level="info">[Done]</echo>
  </target>

	<target name="javadoc" description="Generates the JavaDoc for JPDL2">
	  <javadoc
                destdir="${api_root}" author="true" version="true" use="true" windowtitle="JPDL2">
	      <classpath>
	        <pathelement path="."/>
	        <pathelement location="../java_depencies/commons-logging/commons-logging.jar"/>
	      </classpath>

	    <packageset dir="src" defaultexcludes="yes">  <!--
              <include name="net/sf/nmedit/jpdl2/**"/>
              <include name="net/sf/nmedit/jpdl2/**"/>-->
              <include name="net/sf/nmedit/jpdl2/**"/>
              <exclude name="net/sf/nmedit/jpdl2/**/*.html"/>
              <exclude name="net/sf/nmedit/jpdl2/impl/**"/>
              <exclude name="net/sf/nmedit/jpdl2/utils/**"/>
            </packageset>

	    <doctitle><![CDATA[<h1>JPDL 2</h1>]]></doctitle>
	    <bottom><![CDATA[<i>Copyright &#169; 2007 <a href="http://nmedit.sourceforge.net>nmedit project</a>.</i>]]></bottom>
	    <group title="JPDL2 Package" packages="net.sf.nmedit.jpdl2" />

	    <!-- <tag name="todo" scope="all" description="To do:"/>
	    <group title="Group 1 Packages" packages="com.dummy.test.a*"/>
	    <group title="Group 2 Packages" packages="com.dummy.test.b*:com.dummy.test.c*"/> -->
	    <!-- <link href="http://developer.java.sun.com/developer/products/xml/docs/api/"/> -->
	  </javadoc>
	</target>

  <target name="compile" depends="init"
          description="compile the source">
    <javac srcdir="${src}" destdir="${build}" debug="true" target="1.5" source="1.5">
        <classpath>
          <pathelement path="."/>
          <pathelement location="../java_depencies/commons-logging/commons-logging.jar"/>
        </classpath>
    </javac>
    <copy todir="${build}">
      <fileset dir=".">
        <include name="CHANGELOG"/>
        <include name="LICENSE"/>
      </fileset>
    </copy>
  </target>

  <target name="dist" depends="compile"
          description="generate the distribution">
    <mkdir dir="${dist}/lib"/>
    <jar jarfile="${dist}/lib/jpdl2.jar" basedir="${build}"/>
  </target>

  <target name="compile-test" depends="init"
          description="compile the test source">
    <javac srcdir="${test}" destdir="${build}" debug="true" target="1.5" source="1.5" />
  	<!--
    <copy todir="${build}">
      <fileset dir="test">
        <include name="test.pdl"/>
      </fileset>
    </copy> -->
  </target>

  <target name="test" depends="compile, compile-test"
          description="run unit tests">
    <junit showoutput="true" printsummary="on">
      <classpath>
        <pathelement path="${build}"/>
      </classpath>
      <test name="net.sf.nmedit.jpdl2.test.AllTests"/>
    </junit>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
    <delete dir="${api_root}"/>
  </target>
</project>

