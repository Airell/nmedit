<!ELEMENT substitutions (transform+,use-implementation+,list+)>

<!ELEMENT if EMPTY>
<!ATTLIST if
	replace-with CDATA #REQUIRED
	value-is NMTOKEN #REQUIRED
>
<!ELEMENT item (#PCDATA)>
<!ELEMENT list (item+)>
<!ATTLIST list id ID #REQUIRED>
<!ELEMENT transform (if?)>
<!ATTLIST transform
	factor NMTOKEN #IMPLIED
	id ID #REQUIRED
	offset NMTOKEN #IMPLIED
	praefix CDATA #IMPLIED
	suffix CDATA #IMPLIED
>
<!ELEMENT use-implementation EMPTY>
<!ATTLIST use-implementation
	class ID #REQUIRED
	id NMTOKEN #REQUIRED
>
